<?xml version="1.0" encoding="UTF-8"?>
<plugin id="org.fathens.cordova.plugin.Fabric" version="1.4.3" xmlns="http://www.phonegap.com/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Fabric</name>
    <description>Cordova Plugin for Fabric</description>
    <license>MIT</license>

    <engines>
        <engine name="cordova-android" version=">=4.1.0" />
        <engine name="cordova-ios" version=">=3.9.0" />
    </engines>

    <preference name="API_KEY" />

    <platform name="android">
        <config-file target="AndroidManifest.xml" parent="application">
            <meta-data android:name="io.fabric.ApiKey" android:value="$API_KEY"/>
        </config-file>

        <hook type="after_plugin_install" src="platforms/android/hooks/after_plugin_install.rb"/>
        <hook type="before_prepare" src="platforms/android/hooks/before_prepare.rb"/>
    </platform>

    <platform name="ios">
        <config-file target="*-Info.plist" parent="Fabric">
            <dict>
                <key>APIKey</key>
                <string>$API_KEY</string>
                <key>Kits</key>
                <array>
                    <dict>
                        <key>KitInfo</key>
                        <dict/>
                        <key>KitName</key>
                        <string>Crashlytics</string>
                    </dict>
                </array>
            </dict>
        </config-file>

        <podfile swift_version="3.0">
            <pod name="Fabric" />
        </podfile>

        <hook type="before_prepare" src="platforms/ios/hooks/before_prepare.rb"/>
    </platform>
</plugin>
